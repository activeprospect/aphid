<% @title = object.full_name %>

<ul class="breadcrumbs">
  <% breadcrumb(object).each do |crumb| %>
    <li><%= crumb %></li>
  <% end %>
</ul>

<header>
  <h1>
    <%= object.full_name %>
    <% begin %>
      <% if object.is_a? Models::Class and object.superclass %>
        <span class="superclass"><%= auto_link object.superclass, :name => :long %></span>
      <% end %>
    <% rescue; end %>
  </h1>
  <h2 class="type"><%= object.type %></h2>
  <% if object.deprecated? %>
    <div id="deprecated">
      Deprecated <%#= img_tag('pdoc/deprecated.png', :alt => "Deprecated", :width => 150, :height => 150) %>
    </div>
  <% end %>
</header>

<% if object.respond_to?(:src_code_href) && object.src_code_href %>
  <p id="src_code_href"><a href="<%= object.src_code_href %>">src code</a></p>
<% end %>
